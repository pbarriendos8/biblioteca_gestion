    <property name="connection.url">jdbc:mysql://localhost:3306/biblioteca_pbarriendos_bibliosmart</property>
    <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
      <property name="connection.username">root</property>
      <mapping class="com.pablobn.biblioteca.modelo.Autor"/>
      <mapping class="com.pablobn.biblioteca.modelo.Libro"/>
      <mapping class="com.pablobn.biblioteca.modelo.Prestamo"/>
      <mapping class="com.pablobn.biblioteca.modelo.Usuario"/>
      <!-- <property name="connection.username"/> -->
    <!-- <property name="connection.password"/> -->

    <!-- DB schema will be updated if needed -->
    <!-- <property name="hibernate.hbm2ddl.auto">update</property> -->
  </session-factory>
</hibernate-configuration>